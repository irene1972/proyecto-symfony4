{% extends 'base.html.twig' %}

{% block title %}Detalle de tarea{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h2>{{ task.title }}</h2>
    {# {{dump(task)}} #}
    {# {{dump(task)}}
    {{dump(task.user)}}
    {{dump(task.user.email)}} #}
    <p class="data-task">
      {{ task.user.name }} {{ task.user.surname }} 
      | {{ task.createdAt|date('d/m/Y h:i') }} 
      | {% if task.priority == 'hight'  %}
            {{ 'Alta' }}
        {% endif %}
        {% if task.priority == 'medium'  %}
            {{ 'Media' }}
        {% endif %}
        {% if task.priority == 'low'  %}
            {{ 'Baja' }}
        {% endif %}
      | {{ task.hours }}h
    </p>
    <p>
      {{ task.content }}
    </p>
     
</div>
{% endblock %}